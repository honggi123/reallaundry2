<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    tools:context=".Enroll">

    <TextView
        android:id="@+id/enroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="세탁소 등록"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/StartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_marginBottom="20dp"
        android:text="세탁소명"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/Height"
        app:layout_constraintRight_toLeftOf="@id/editStartDay"
        app:layout_constraintTop_toBottomOf="@+id/enroll" />

    <EditText
        android:id="@+id/editStartDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="세탁소명을 입력하세요"
        android:inputType="date"
        app:layout_constraintBottom_toBottomOf="@+id/StartDay"
        app:layout_constraintStart_toEndOf="@+id/StartDay"
        app:layout_constraintTop_toBottomOf="@+id/enroll"
        app:layout_constraintTop_toTopOf="@+id/StartDay" />

    <TextView
        android:id="@+id/Height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="주소"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/StartDay"
        app:layout_constraintRight_toRightOf="@id/StartDay"
        app:layout_constraintTop_toBottomOf="@+id/StartDay" />

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="주소를 입력하세요"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/Height"
        app:layout_constraintLeft_toLeftOf="@+id/editStartDay"
        app:layout_constraintTop_toTopOf="@+id/Height" />

    <TextView
        android:id="@+id/Weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="사업자 번호"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/Height"
        app:layout_constraintRight_toRightOf="@id/Height"
        app:layout_constraintTop_toBottomOf="@+id/Height" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="사업자 번호를 입력하세요"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/Weight"
        app:layout_constraintLeft_toLeftOf="@+id/editStartDay"
        app:layout_constraintTop_toTopOf="@+id/Weight" />


    <Button
        android:id="@+id/EnrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="등록"
        app:layout_constraintBottom_toTopOf="@+id/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editWeight" />
    //android:onClick="enrolldata"/>


    <ImageButton
        android:id="@+id/home"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/home"
        android:scaleType="fitCenter"
        android:layout_marginBottom="120dp"
        app:layout_constraintTop_toBottomOf="@+id/EnrollButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="backMain"/>

