<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <ImageButton
        android:id="@+id/arm"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/arm"
        android:padding="10dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_weight="1"
        />

    <ImageButton

        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/leg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/leg2"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        />

    <ImageButton

        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/muscle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/sixpack"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        />
    </LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    >
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/radiogroupedit">

        <RadioButton
            android:id="@+id/armCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_selector"
            android:text="상의"
            android:textColor="@color/black" />


        <RadioButton
            android:id="@+id/legCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_selector"
            android:text="하의"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/muscleCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector"
            android:text="신발"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/muscle"
            app:layout_constraintStart_toStartOf="@+id/muscle"
            app:layout_constraintTop_toBottomOf="@+id/muscle" />
    </RadioGroup>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="세탁소명" />

        <EditText
            android:id="@+id/mod_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="세탁소명을 등록하세요"
            android:inputType="textUri"
            app:layout_constraintRight_toLeftOf="@+id/Link"
            app:layout_constraintStart_toEndOf="@+id/Link"
            app:layout_constraintTop_toBottomOf="@+id/legCheck" />

</LinearLayout>

    <Button
        android:id="@+id/mod_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수정"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"

        />

</LinearLayout>
</LinearLayout>
